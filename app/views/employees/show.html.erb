<section id="companies-show">


  <div class="actions">
    <%= link_to "Editar", edit_company_employee_path(@company, @employee) %>
    <%= button_to "Eliminar", company_employee_path(@employee), method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar esta compañía?" }, form_class: "delete-form" %>

    <a href="<%= company_employees_path(@company) %>">Volver a la Lista</a>
  </div>

  <div class="details-container">
    <div class="title-item">
      <h5> Detalles del empleado </h5>
      <% if @employee.photo.key.present? %>
        <%= cl_image_tag @employee.photo.key, height: 100, width: 100, crop: :fill %>
      <% else %>
        <%= image_tag "250.jpg" , height: 100, width: 100 %>
      <% end %>

    </div>

    <div class="detail-item">
      <strong>Primer nombre:</strong>
      <span><%= @employee.first_name %></span>
    </div>
    <div class="detail-item">
      <strong>Segundo nombre:</strong>
      <span><%= @employee.middle_name %></span>
    </div>
    <div class="detail-item">
      <strong>Apellido paterno:</strong>
      <span><%= @employee.last_name %></span>
    </div>
    <div class="detail-item">
      <strong>Apellido materno:</strong>
      <span><%= @employee.last_name_2 %></span>
    </div>

    <div class="detail-item">
      <strong>Seguro Social:</strong>
      <span><%= @employee.social_security %></span>
    </div>
    <div class="detail-item">
      <strong>Número de Empleado:</strong>
      <span><%= @employee.employee_number %></span>
    </div>
    <div class="detail-item">
      <strong>Número de Licencia:</strong>
      <span><%= @employee.license_number %></span>
    </div>
    <div class="detail-item">
      <strong>Fecha de Comienzo:</strong>
      <span><%= @employee.start_date.strftime('%m/%d/%Y') if @employee.start_date %></span>
    </div>
    <div class="detail-item">
      <strong>Fecha de Terminación:</strong>
      <span><%= @employee.termination_date.strftime('%m/%d/%Y') if @employee.termination_date %></span>
    </div>
    <div class="detail-item">
      <strong>Es Conductor:</strong>
      <span><%= @employee.is_driver ? "Sí" : "No" %></span>
    </div>

    <div class="title-item">
      <h5> Información de dirección </h5>
    </div>
    <div class="detail-item">
      <strong>Dirección:</strong>
      <span><%= @employee.address_line %></span>
    </div>
    <div class="detail-item">
      <strong>Ciudad:</strong>
      <span><%= @employee.city %></span>
    </div>
    <div class="detail-item">
      <strong>País:</strong>
      <span><%= @employee.country %></span>
    </div>
    <div class="detail-item">
      <strong>Código Postal:</strong>
      <span><%= @employee.zip_code %></span>
    </div>

    <div class="title-item">
      <h5> Información de contacto </h5>
    </div>
    <div class="detail-item">
      <strong>Número de Teléfono (Fijo):</strong>
      <span><%= @employee.phone_number %></span>
    </div>
    <div class="detail-item">
      <strong>Número de Teléfono (Móvil):</strong>
      <span><%= @employee.mobile_phone %></span>
    </div>
    <div class="detail-item">
      <strong>Email:</strong>
      <span><%= @employee.email %></span>
    </div>

    <div class="title-item">
      <h5> Información laboral </h5>
    </div>
    <div class="detail-item">
      <strong>Género:</strong>
      <span><%= @employee.genre %></span>
    </div>
    <div class="detail-item">
      <strong>Cargo:</strong>
      <span><%= @employee.employ %></span>
    </div>
    <div class="detail-item">
      <strong>Tarifa por Hora:</strong>
      <span><%= @employee.hourly_rate %></span>
    </div>
    <div class="detail-item">
      <strong>Estado:</strong>
      <span><%= @employee.status %></span>
    </div>
    <div class="detail-item">
      <strong>Inicial horas de vaciones acumuladas:</strong>
      <span><%= @employee.initial_acum_vacation_hours || 0 %></span>
    </div>
    <div class="detail-item">
      <strong>Inicial horas de enfermdad acumuladas:</strong>
      <span><%= @employee.initial_acum_sickness_hours || 0 %></span>
    </div>
</div>




</section>



<style>

    #companies-show {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      padding: 1.5rem;
    }



    .details-container {
      display: flex;
      flex-wrap: wrap;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      column-gap: 1%;
      width: 100%;
    }

    .detail-item {
      min-width: 48.5%;
      margin-bottom: 8px;
      display: flex;

    }

    .detail-item strong {
      width: 30%;

    }

    .detail-item span {
      width: 69%;
      text-wrap: wrap;
      overflow-wrap: break-word;
    }

    .title-item {
      width: 100%;
      color: #00DE82;
      font-weight: bold;
      font-size: 1.2rem;
      border-bottom: 1px solid #ddd;
      margin-bottom: 16px;
      display: flex;
      justify-content: space-between;
    }

    .detail-item strong {
      display: block;
      font-size: 16px;
      color: #555;
      margin-bottom: 5px;
    }

    .actions {

      display: flex;
      gap: 10px;
    }

    .actions a, .actions form button {
      padding: 10px 15px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      color: #fff;
      text-decoration: none;
      cursor: pointer;
    }

    .actions a {
      background-color: #1a73e8;
    }

    .actions a:hover {
      background-color: #155cb0;
    }

    .actions form button {
      background-color: #e53935;
    }

    .actions form button:hover {
      background-color: #c62828;
    }
  </style>
