<div id="login">
  <div class="loginCard">
    <h2 class="loginTitle">Bienvenido a Nomiva</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "loginForm"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Iniciar secciÃ³n", class: "loginBtn" %>
      </div>

      <div class="loginLinks">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>


  </div>


</div>
